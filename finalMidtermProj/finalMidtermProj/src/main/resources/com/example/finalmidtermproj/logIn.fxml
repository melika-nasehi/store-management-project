<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalmidtermproj.logIn">
   <children>
      <Label layoutX="261.0" layoutY="52.0" text="Log in" textFill="#d700d7">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label layoutX="133.0" layoutY="119.0" text="Username :" />
      <Label layoutX="135.0" layoutY="183.0" text="Password :" />
      <TextField fx:id="logInUsername" layoutX="234.0" layoutY="115.0" promptText="username" />
      <TextField fx:id="logInPassword" layoutX="234.0" layoutY="179.0" promptText="password" />
      <Button defaultButton="true" layoutX="257.0" layoutY="245.0" mnemonicParsing="false" onAction="#logIn" text="Confirm" />
      <Button fx:id="signUp" layoutX="253.0" layoutY="315.0" mnemonicParsing="false" onAction="#goToSignUpPage" style="-fx-background-color: transparent;" text="Click here" />
      <Label layoutX="227.0" layoutY="291.0" text="Haven't signed up yet?" />
   </children>
</AnchorPane>
